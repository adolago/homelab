# Services VM environment variables
# Copy to .env and fill in your values

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme

# dnsmasq web UI
DNSMASQ_USER=admin
DNSMASQ_PASSWORD=changeme

# Network IPs (for Caddy reverse proxy)
# CUSTOMIZE: Update with your network IPs
SERVICES_IP=192.168.1.10
PVE_IP=192.168.1.2
NAS_IP=192.168.1.11
HA_IP=192.168.1.20

# Proxmox VE Exporter (for monitoring)
# CUSTOMIZE: Create API token in Proxmox: Datacenter > Permissions > API Tokens
PVE_USER=root@pam
PVE_TOKEN_NAME=prometheus
PVE_TOKEN_VALUE=your-token-value-here
